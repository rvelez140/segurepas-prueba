{
  "expo": {
    "name": "SecurePass",
    "slug": "securepass",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.securepass.app"
    },
    "android": {
      "package": "com.securepass.app",
      "versionCode": 1,
      "minSdkVersion": 29,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "buildToolsVersion": "34.0.0",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#2196F3"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./src/assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permite a $(PRODUCT_NAME) acceder a tu cámara para escanear códigos QR"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite a $(PRODUCT_NAME) acceder a tus fotos"
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://localhost:3000/api"
    }
  }
}
