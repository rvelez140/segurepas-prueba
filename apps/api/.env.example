# ============================================
# MongoDB Configuration
# ============================================
# Opción 1: MongoDB Local (desarrollo)
# MONGODB_URI=mongodb://localhost:27017/securepass

# Opción 2: MongoDB Atlas (producción/externa) - RECOMENDADO
# Formato: mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Ejemplo: MONGODB_URI=mongodb+srv://admin:tu_password@cluster0.xxxxx.mongodb.net/securepass?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/securepass

# Credenciales MongoDB (solo para MongoDB local con Docker)
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB_NAME=securepass
MONGODB_PORT=27017

# NOTA: Si usas MongoDB Atlas, solo necesitas configurar MONGODB_URI
# Las otras variables (MONGO_ROOT_USER, etc.) solo son necesarias para MongoDB local

# Server Configuration
PORT=8000
NODE_ENV=development
JWT_SECRET=your-jwt-secret-key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-app-password
EMAIL_FROM=SecurePass <noreply@securepass.com>
EMAIL_SENDER=SecurePass
EMAIL_REPLY=support@securepass.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (obtener de dashboard de Stripe)
STRIPE_PRICE_BASIC_MONTHLY=price_basic_monthly_id
STRIPE_PRICE_BASIC_YEARLY=price_basic_yearly_id
STRIPE_PRICE_PREMIUM_MONTHLY=price_premium_monthly_id
STRIPE_PRICE_PREMIUM_YEARLY=price_premium_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # 'sandbox' or 'live'

# PayPal Plan IDs (obtener de dashboard de PayPal)
PAYPAL_PLAN_BASIC_MONTHLY=P-basic-monthly-plan-id
PAYPAL_PLAN_BASIC_YEARLY=P-basic-yearly-plan-id
PAYPAL_PLAN_PREMIUM_MONTHLY=P-premium-monthly-plan-id
PAYPAL_PLAN_PREMIUM_YEARLY=P-premium-yearly-plan-id
PAYPAL_PLAN_ENTERPRISE_MONTHLY=P-enterprise-monthly-plan-id
PAYPAL_PLAN_ENTERPRISE_YEARLY=P-enterprise-yearly-plan-id

# Frontend URL
FRONTEND_URL=http://localhost:3000
