{
  "name": "securepass-desktop",
  "version": "1.0.0",
  "description": "SecurePass Desktop Application for Windows, macOS, and Linux",
  "main": "dist/main.js",
  "author": {
    "name": "SecurePass Team",
    "email": "team@securepass.com"
  },
  "license": "MIT",
  "private": true,
  "homepage": "https://securepass.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/securepass/desktop.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run start:electron\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:electron": "electron .",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl",
    "dist:win:portable": "electron-builder --win portable",
    "dist:mac:dmg": "electron-builder --mac dmg",
    "dist:mac:zip": "electron-builder --mac zip",
    "dist:linux:appimage": "electron-builder --linux AppImage",
    "dist:linux:deb": "electron-builder --linux deb",
    "dist:linux:rpm": "electron-builder --linux rpm",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist release",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.securepass.desktop",
    "productName": "SecurePass",
    "copyright": "Copyright 2024 SecurePass Team",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "assets/**/*",
      "!**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "SecurePass Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "darkModeSupport": true,
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility",
      "icon": "assets/icons",
      "desktop": {
        "Name": "SecurePass",
        "Comment": "Sistema de control de acceso y gestion de visitantes",
        "Categories": "Utility;Security;",
        "Keywords": "access;control;security;visitors;"
      },
      "maintainer": "SecurePass Team <team@securepass.com>"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      },
      "title": "SecurePass ${version}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SecurePass",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "Utility"
    },
    "snap": {
      "grade": "stable",
      "confinement": "strict",
      "summary": "Sistema de control de acceso SecurePass"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "securepass",
        "repo": "desktop",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
