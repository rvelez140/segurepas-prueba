# ============================================
# Stage 1: Build
# ============================================
FROM node:18-alpine AS build

# Metadatos
LABEL maintainer="SecurePass Team"
LABEL description="SecurePass Web - Frontend React"

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias (todas, incluyendo devDependencies para el build)
RUN npm ci && npm cache clean --force

# Copiar c칩digo fuente
COPY . .

# Compilar aplicaci칩n React
RUN npm run build

# ============================================
# Stage 2: Production con Nginx
# ============================================
FROM nginx:alpine AS production

# Metadatos
LABEL version="1.0.0"

# Instalar wget para healthcheck
RUN apk add --no-cache wget

# Copiar build desde stage anterior
COPY --from=build /app/build /usr/share/nginx/html

# Copiar configuraci칩n de nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponer puerto 80
EXPOSE 80

# Healthcheck para verificar que nginx est치 sirviendo la app
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Iniciar nginx
CMD ["nginx", "-g", "daemon off;"]