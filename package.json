{
  "scripts": {
    "start:web": "cd apps/web && npm start",
    "start:mobile": "cd apps/mobile && npm start",
    "start:desktop": "cd apps/desktop && npm run dev",
    "start:api": "cd apps/api && npm run dev",
    "start:all": "concurrently \"npm:start:api\" \"npm:start:web\" \"npm:start:mobile\"",
    "start:desktop-full": "concurrently \"npm:start:api\" \"npm:start:web\" \"npm:start:desktop\"",
    "build:desktop": "cd apps/desktop && npm run build",
    "dist:desktop:win": "cd apps/desktop && npm run dist:win",
    "dist:desktop:linux": "cd apps/desktop && npm run dist:linux",
    "dist:desktop": "cd apps/desktop && npm run dist",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "test:api": "cd apps/api && npm test",
    "test:web": "cd apps/web && npm test -- --watchAll=false",
    "test:all": "npm run test:api && npm run test:web",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "concurrently": "^8.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0"
  }
}
